<UserControl x:Class="MW5MercsEnhancedStats.Controlls.ListItemSalvage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MW5MercsEnhancedStats.Controlls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="510">
    <StackPanel Orientation="Horizontal" Margin="2">
        <TextBox Width="200" Height="30" x:Name="tbType"></TextBox>
        <TextBox Width="150" Height="30" Margin="2,0,0,0" x:Name="tbValue"></TextBox>
        <ComboBox Style="{DynamicResource ComboBoxStyle1}" Width="50" Height="30" BorderThickness="0" Margin="2,0,2,0" x:Name="cbLvl">
            <ComboBoxItem>0</ComboBoxItem>
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
        </ComboBox>
        <TextBox Width="60" Height="30" x:Name="tbAmount"></TextBox>
        <Button Style="{StaticResource HamburgerButton}" Width="40" Margin="2" x:Name="btDelSalvage" Click="btDelSalvage_Click">-</Button>
    </StackPanel>
</UserControl>
