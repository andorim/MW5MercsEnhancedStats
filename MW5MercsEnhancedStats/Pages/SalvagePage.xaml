<Page x:Class="MW5MercsEnhancedStats.Pages.SalvagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MW5MercsEnhancedStats.Pages"
      xmlns:controls="clr-namespace:MW5MercsEnhancedStats.Controlls"
      mc:Ignorable="d" 
      d:DesignHeight="625" d:DesignWidth="1000"
      Title="SalvagePage">

    <StackPanel Width="550" HorizontalAlignment="Left">
        <StackPanel Orientation="Horizontal" Margin="20,20,20,0">
            <Label Width="200" Height="30">Type</Label>
            <Label Width="150" Height="30" Margin="2,0,0,0">Value</Label>
            <Label Width="50" Height="30" BorderThickness="0" Margin="2,0,2,0" x:Name="cbLvl">Lvl</Label>
            <Label Width="60" Height="30" >Amount</Label>
            <Button Style="{StaticResource HamburgerButton}" Width="40" Margin="2" x:Name="btAddSalvage" Click="btAddSalvage_Click">+</Button>
        </StackPanel>
        <StackPanel Margin="20,5,20,20" Height="540" Background="#19FFFFFF" x:Name="spSalvage">
        </StackPanel>
    </StackPanel>
</Page>
